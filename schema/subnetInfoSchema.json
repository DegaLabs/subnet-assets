{
  "$id": "/schemas/SubnetInfoSchema.json",
  "description": "Schema for subnet infomation",
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "subnetId": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9]+$"
    },
    "subnetName": {
      "type": "string",
      "maxLength": 32
    },
    "isTestnet": {
      "type": "boolean"
    },
    "description": {
      "type": "string"
    },
    "officialSite": {
      "type": "string",
      "format": "uri"
    },
    "resourceLinks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "Twitter",
              "Facebook",
              "Discord",
              "Telegram",
              "Blog",
              "Medium",
              "Whitepaper",
              "CoinGecko",
              "CoinMarketCap",
              "LinkedIn",
              "Reddit",
              "Support",
              "Github",
              "Documentation"
            ]
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        },
        "required": ["type", "url"]
      }
    }
  },
  "required": ["subnetId", "subnetName", "isTestnet"]
}
